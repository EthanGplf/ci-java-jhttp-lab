pipeline:
  identifier: Build_ci_java_jhttp_lab_v2
  name: Build ci-java-jhttp-lab
  orgIdentifier: default
  projectIdentifier: default_project
  properties:
    ci:
      codebase:
        build: <+input>
        connectorRef: org.github_ci_connector
        repoName: ci-java-jhttp-lab
  stages:
    - stage:
        identifier: build
        name: build
        spec:
          caching:
            enabled: true
          cloneCodebase: true
          execution:
            steps:
              - step:
                  name: Run Unit Tests
                  type: Run
                  identifier: run_tests
                  spec:
                    shell: Sh
                    image: maven:3.8-jdk-11
                    command: mvn clean test
              - step:
                  name: Package App
                  identifier: package_app
                  type: Run
                  spec:
                    shell: Sh
                    image: maven:3.8-jdk-11
                    command: mvn package -DskipTests
              - step:
                  identifier: dockerbuild
                  name: docker_build
                  type: BuildAndPushDockerRegistry
                  spec:
                    caching: true
                    connectorRef: <+input>
                    repo: esglusto/ci-java-jhttp
                    tags:
                      - <+pipeline.sequenceId>
              - step:
                  name: Build and Push Multi-Arch Image
                  identifier: build_push_multiarch
                  type: ShellScript
                  spec:
                    shell: Sh
                    executionTarget:
                      host: HarnessCloud # or your custom delegate if self-hosted
                    source:
                      type: Inline
                      spec:
                        script: |
                          docker run --privileged --rm tonistiigi/binfmt --install all
                          docker buildx create --use
                          docker buildx build --platform linux/amd64,linux/arm64 \
                            -t esglusto/ci-java-jhttp:${HARNESS_BUILD_ID} \
                            --push .
                    environmentVariables:
                      - name: HARNESS_BUILD_ID
                        type: String
                        value: <+pipeline.sequenceId>

                  platform:
                    arch: Arm64
                    os: Linux
        type: CI
